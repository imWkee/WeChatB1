.box {
  width: 200px;
  height: 200px;
  background: orange;
}

.boxhover {
  background: red;
}

.box .inner{
  width: 80px;
  height: 80px;
  background: pink;
}

.box .innerhover {
  background: red;
}

.myScroll {
  width: 100%;
  height: 220rpx;
  background: grey;
  white-space: nowrap;
}

.myScroll .row {
  width: 220rpx;
  height: 220rpx;
  background: palegreen;
  margin-right: 20rpx;
  display: inline-block;
}
.myScroll .row:last-child{
  margin-right: 0;
}

